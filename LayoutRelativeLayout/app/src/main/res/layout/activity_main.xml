<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btn_button01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android android:layout_alignParentLeft="true"
        android:text="Button" />


    <Button
        android:id="@+id/btn_button02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_button01"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="209dp"
        android:layout_marginEnd="5dp"
        android:text="Button" />

    <Button
        android:id="@+id/btn_button03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_button02"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="125dp"
        android:layout_marginTop="59dp"
        android android:layout_alignWithParentIfMissing="true"
        android:layout_toEndOf="@id/btn_button02"
        android:text="Button" />
</RelativeLayout>