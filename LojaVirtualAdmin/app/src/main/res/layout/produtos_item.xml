<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="30dp"
    app:cardElevation="8dp"
    android:layout_marginVertical="20dp"
    android:layout_marginHorizontal="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtCodigoProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CÃ³digo:01 "
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fotoProduto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="centerCrop"/>


            <TextView
                android:id="@+id/txtNomeProduto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sapato Masculino Casual - Preto tamanho 42"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"/>



        </LinearLayout>


        <TextView
            android:id="@+id/txtPrecoProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 49.90"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/greent_gray"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"/>



    </LinearLayout>

</androidx.cardview.widget.CardView>